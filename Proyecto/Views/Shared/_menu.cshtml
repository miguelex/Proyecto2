@* Menú superior izquierdo con diferentes accesos en función de si se esta logeado o no *@

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Facilitador", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            @* Primervo evaluaremos si el usuario esta identificado o no, para mostrar en caso afirmativo opciones especiales *@
            @if (Request.IsAuthenticated)
            {
                //Usuario identificado
                if ((bool)Session["rol"])
                {
                    // Si es administrador
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Administrador", "Index", "Admin")</li>
                    </ul>
                }
                else
                {
                    // Si es usuario normal
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Mi Histórico", "Index", "Home")</li>
                    </ul>
                }
            }
           <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                <li>@Html.ActionLink("Contacto", "Contacto", "Home")</li>
                <li>@Html.ActionLink("F.A.Q", "Faq", "Home")</li>
           </ul>
           @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>


