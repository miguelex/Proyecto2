@model Modelos.Poblacion

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Población</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Provincia: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Provincia.NombreProvincia)
        </dd>

        <dt>
            @Html.Label("Población: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombrePoblacion)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-default btn-primary glyphicon glyphicon-edit" }) |
    @Html.ActionLink("Atrás", "Index")
</p>
