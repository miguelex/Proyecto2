@model Modelos.Provincia

@{
    ViewBag.Title = "Borrar";
}

<h2>Borrar Provincia</h2>

<h3>¿Estas seguro de que deseas borrar la provincia?</h3>
<div>
    <h4>Provincia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Provincia")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreProvincia)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver al índice", "Index")
        </div>
    }
</div>
